# Database Configuration
DATABASE_URL=postgresql://localhost/photo_pets_annotation

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Backend URL (for generating URLs)
BACKEND_URL=http://localhost:8000

# Initial Admin Users (JSON array)
# Example: [{"username":"admin","password":"admin123","full_name":"Admin User"}]
SEED_ADMINS=[{"username":"admin","password":"admin123","full_name":"Administrator"}]

# ============================================
# Google Drive Service Account Configuration
# ============================================
# These credentials are used to access images from Google Drive
# Get these from your Google Cloud Console Service Account JSON file

GOOGLE_SERVICE_ACCOUNT_TYPE=service_account
GOOGLE_SERVICE_ACCOUNT_PROJECT_ID=your-project-id
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_SERVICE_ACCOUNT_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_CLIENT_ID=your-client-id

# Google Drive Folder ID
# This is the folder containing images to annotate
# Extract from URL: https://drive.google.com/drive/folders/FOLDER_ID_HERE
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here
